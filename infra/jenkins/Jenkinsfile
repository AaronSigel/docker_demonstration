pipeline {
    agent any

    environment {
        COMPOSE_PROJECT_NAME = 'demo'
        NETWORK_NAME = 'microservices_net'
        APP_SERVICES = 'workspace-service booking-service payment-service'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out repository...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building Docker images for app services...'
                sh """
                    docker compose -p ${COMPOSE_PROJECT_NAME} build --no-cache ${APP_SERVICES}
                """
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying app services...'
                sh """
                    docker compose -p ${COMPOSE_PROJECT_NAME} up -d ${APP_SERVICES}
                    sleep 30
                """
            }
        }

        stage('Smoke Tests') {
            steps {
                echo 'Running smoke tests through Docker network...'
                script {
                    def services = [
                        ['name': 'workspace-service', 'port': '8081'],
                        ['name': 'booking-service', 'port': '8082'],
                        ['name': 'payment-service', 'port': '8083']
                    ]

                    services.each { service ->
                        echo "Testing ${service.name}..."
                        
                        // Health check через docker-сеть
                        sh """
                            docker run --rm --network ${NETWORK_NAME} curlimages/curl:latest \
                                -f -s http://${service.name}:${service.port}/actuator/health || exit 1
                        """
                        
                        // Version check через docker-сеть
                        sh """
                            docker run --rm --network ${NETWORK_NAME} curlimages/curl:latest \
                                -f -s http://${service.name}:${service.port}/api/version || exit 1
                        """
                        
                        echo "${service.name} is UP"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
        always {
            echo 'Cleaning up...'
        }
    }
}

